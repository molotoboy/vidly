@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    @if (@Model.Released != null) {<li>Released: @Model.Released</li>}
    @if (@Model.Added != null){<li>Added: @Model.Added</li>}
    <li>Number in stock: @Model.InStock</li>
</ul>
